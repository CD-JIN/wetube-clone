extends ../base
include ../mixins/video

block content 
    div.profile__data 
        if loggedInUser.socialOnly
            img(src=user.avatarUrl).avtar
        else 
            img(src="/" + user.avatarUrl).avtar
        h3=user.name
    div.video-grid
        each video in user.videos 
            +video(video)
        else
            span.empty__mesaage No videos found